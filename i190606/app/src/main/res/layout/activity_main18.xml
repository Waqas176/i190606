<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity18"
    android:orientation="vertical"
    android:background="@color/black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/black"
            android:src="@drawable/back18"
            android:layout_marginTop="11dp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:hint="Search"
            android:paddingLeft="20dp"
            android:textColorHint="@color/black"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:layout_marginVertical="20dp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Searches"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="70dp"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            >

            <ImageButton
                android:id="@+id/despactio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/despacito8"


                android:scaleType="fitXY"
                android:maxHeight="130dp"
                android:maxWidth="130dp"
                android:adjustViewBounds="true"

                />

            <TextView
                android:id="@+id/songname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/despactio"
                android:text="Song Name"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/despactio"
                android:text="Artist"
                android:textColor="@color/white"
                android:layout_marginTop="70dp"
                android:textSize="20sp"
                />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross18"
                android:background="@color/black"
                android:layout_toRightOf="@+id/songname"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="50dp"


                android:scaleType="fitXY"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:adjustViewBounds="true"


                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            >

            <ImageButton
                android:id="@+id/despactio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/black"


                android:maxWidth="140dp"
                android:maxHeight="130dp"
                android:scaleType="fitXY"
                android:src="@drawable/playlist5"

                />

            <TextView
                android:id="@+id/songname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/despactio"
                android:text="Song Name"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/despactio"
                android:text="Artist"
                android:textColor="@color/white"
                android:layout_marginTop="70dp"
                android:textSize="20sp"
                />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross18"
                android:background="@color/black"
                android:layout_toRightOf="@+id/songname"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="50dp"


                android:scaleType="fitXY"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:adjustViewBounds="true"


                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            >

            <ImageButton
                android:id="@+id/despactio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/black"


                android:maxWidth="140dp"
                android:maxHeight="130dp"
                android:scaleType="fitXY"
                android:src="@drawable/playlist5"

                />

            <TextView
                android:id="@+id/songname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/despactio"
                android:text="Song Name"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/despactio"
                android:text="Artist"
                android:textColor="@color/white"
                android:layout_marginTop="70dp"
                android:textSize="20sp"
                />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross18"
                android:background="@color/black"
                android:layout_toRightOf="@+id/songname"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="50dp"


                android:scaleType="fitXY"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:adjustViewBounds="true"


                />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#633939"
        android:layout_marginTop="200dp"
        android:weightSum="4">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/heart5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Liked"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="27dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/plus5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="33dp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/search5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="23dp"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/clock5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listen Later"
                android:textColor="@color/white"
                android:textSize="15dp"

                android:layout_marginTop="50dp"
                android:layout_marginLeft="7dp"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>